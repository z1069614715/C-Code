[L2-021](https://pintia.cn/problem-sets/994805046380707840/problems/994805058485469184)

    //
    // Created by Admin on 2019/3/22.
    //
    using namespace std;

    #include <stdio.h>
    #include <string>
    #include <vector>
    #include <algorithm>

    struct node{
        char name[9];
        int total;
        int all;
    }arr[105];

    int n;
    vector<int> vec;

    int cmp1(node a, node b){
        return a.total > b.total;
    }

    int cmp2(node a, node b){
        return a.all < b.all;
    }

    int main(){
        scanf("%d", &n);
        for (int i = 0; i < n; ++i) {
            vec.clear();
            string name;
            scanf("%s %d", arr[i].name, &arr[i].all);
            for (int j = 0; j < arr[i].all; ++j) {
                int num;
                scanf("%d", &num);
                vec.push_back(num);
            }
            // 一定要先排序  再去重
            sort(vec.begin(),vec.end());
            vec.erase(unique(vec.begin(),vec.end()),vec.end());
            arr[i].total = vec.size();
        }
        sort(arr,arr + n,cmp2);
        sort(arr,arr + n,cmp1);
        if (n == 0) printf("- - -");
        else printf("%s", arr[0].name);
        for (int i = 1; i < n && i < 3; ++i) {
            printf(" %s", arr[i].name);
        }
        if (n < 3){
            for (int i = 0; i < 3 - n; ++i) {
                printf(" -");
            }
        }
    }
